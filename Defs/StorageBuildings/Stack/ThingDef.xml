<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Parent -->

  <ThingDef ParentName="ASMedievalStorageBase" Name="ASMedievalStackThingBase" Abstract="True">
	    <defName>ASMedievalStackBase</defName>
		<label>stack</label>
		<graphicData>
			<texPath>ASMedieval/Stack/StackEmpty</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(4,4)</drawSize>
		</graphicData>
		<description>A large square platform designed to store things, keeping them clean and off the ground.</description>
		<fillPercent>0.20</fillPercent>
<!--		<uiIconPath>ASMedieval/Stack/StackEmpty</uiIconPath>
		<uiIconScale>1.2</uiIconScale>  -->
		<size>(2,2)</size>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<Mass>16</Mass>
			<WorkToBuild>1000</WorkToBuild>
		</statBases>
		<building>
			<preventDeteriorationOnTop>true</preventDeteriorationOnTop>
			<maxItemsInCell>4</maxItemsInCell>
			<fixedStorageSettings>
				<filter>
					<disallowNotEverStorable>true</disallowNotEverStorable>
					<categories>
						<li>MeatRaw</li>
						<li>PlantFoodRaw</li>
					</categories>
					<thingDefs>
						<!--<li>Kibble</li>
						<li>Pemmican</li>  -->
					</thingDefs>
				</filter>
			</fixedStorageSettings>
			<paintable>true</paintable>
		</building>
    <costStuffCount>40</costStuffCount>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsFurniture</li>
		</thingCategories>
	  <designatorDropdown>ISA_Storage_Stack</designatorDropdown>
	</ThingDef>

  <!-- Wood Food Barrel -->

  <ThingDef ParentName="ASMedievalStackThingBase">
		<defName>ASMedievalStackWoody</defName>
		<stuffCategories>
			<li>Woody</li>
		</stuffCategories>
	</ThingDef>

</Defs>
