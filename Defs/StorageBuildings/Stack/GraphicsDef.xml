<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<AdaptiveStorage.GraphicsDef Name="ASMedievalStackBase" Abstract="True">
		<targetDef>ASMedievalStackWoody</targetDef>
		<showContainedItems>false</showContainedItems>
	</AdaptiveStorage.GraphicsDef>

  <!-- Parent Wood Food Barrel -->
  
	<AdaptiveStorage.GraphicsDef ParentName="ASMedievalStackBase">
		<defName>ASMedievalStackBase</defName>
		<graphics>
			<li>
				<graphicData>
					<texPath>ASMedieval/Stack/StackEmpty</texPath>
					<graphicClass>Graphic_Multi</graphicClass>
					<drawSize>(4,4)</drawSize>
				</graphicData>
			</li>
			<li>
				<graphicData>
					<texPath>ASMedieval/Stack/StackMixed/StackMixed</texPath>
					<graphicClass>Graphic_Multi</graphicClass>
					<drawSize>(4,4)</drawSize>
				</graphicData>
				<minimumStackCount>1</minimumStackCount>
			</li>
		</graphics>
		<randomSelectionWeight>0</randomSelectionWeight>
	</AdaptiveStorage.GraphicsDef>
  
  <!-- Wood Meat Stack -->

  <AdaptiveStorage.GraphicsDef ParentName="ASMedievalStackBase">
		<defName>ASMedievalStackMeat</defName>
		<graphics>
			<li>
				<graphicData>
					<texPath>ASMedieval/Stack/StackMeat/StackMeat</texPath>
					<graphicClass>Graphic_Multi</graphicClass>
		    	<shaderType>CutoutComplex</shaderType>
					<drawSize>(4,4)</drawSize>
				</graphicData>
				<minimumStackCount>1</minimumStackCount>
			</li>
		<allowedThingCategories>
			<li>MeatRaw</li>
		</allowedThingCategories>
	</AdaptiveStorage.GraphicsDef>

  <!-- Wood Vegetables Stack -->

  <AdaptiveStorage.GraphicsDef ParentName="ASMedievalStackBase">
		<defName>ASMedievalStackVegetables</defName>
		<graphics>
			<li>
				<graphicData>
					<texPath>ASMedieval/Stack/StackVegetables/StackVegetables</texPath>
					<graphicClass>Graphic_Multi</graphicClass>
		    	<shaderType>CutoutComplex</shaderType>
					<drawSize>(4,4)</drawSize>
				</graphicData>
				<minimumStackCount>1</minimumStackCount>
			</li>
		<allowedThingCategories>
			<li>PlantFoodRaw</li>
		</allowedThingCategories>
	</AdaptiveStorage.GraphicsDef>

</Defs>
