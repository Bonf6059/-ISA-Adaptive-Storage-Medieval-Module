<!-- ASMedievalStackMead -->
	
  <AdaptiveStorage.GraphicsDef ParentName="ASMedievalStackBase" MayRequire="ISA.hornetkeeping">
		<defName>ASMedievalStackMead</defName>
	  	<targetDef>ASMedievalStackMeadWoody</targetDef>
		<graphics>
			<li>
				<graphicData>
					<texPath>ASMedieval/Stack/StackEmpty</texPath>
					<graphicClass>Graphic_Multi</graphicClass>
					<drawSize>(4,4)</drawSize>
				</graphicData>
			</li>
			<li>
				<graphicData>
					<texPath>ASMedieval/Stack/StackMead/StackMead</texPath>
					<graphicClass>Graphic_Multi</graphicClass>
		    	<shaderType>CutoutComplex</shaderType>
					<drawSize>(4,4)</drawSize>
				</graphicData>
				<minimumStackCount>1</minimumStackCount>
			</li>
		</graphics>
		<onlyAllowRequiredThingDefs>true</onlyAllowRequiredThingDefs>
		<requiredThingDefs>
			<li>ISA_HornetMead</li>
   			<li>ISA_HornetHoney</li>
     		<li MayRequire="OskarPotocki.VFE.Medieval2">VFEM2_Mead</li>
     		<li MayRequire="OskarPotocki.VFE.Medieval2">VFEM2_Honey</li>
		</requiredThingDefs>
	</AdaptiveStorage.GraphicsDef>

