<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Parent -->

  <ThingDef ParentName="ASMedievalStorageBase" Name="ASMedievalAlchemyShelfThingBase" Abstract="True">
		<label>alchemy shelf</label>
		<graphicData>
			<texPath>ASMedieval/AlchemyShelf/Shelf_AssortedHerbs</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(2.75,2.75)</drawSize>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<description>A shelf for storing miscellaneous items. Items stored in this will not affect room beauty and they won't deteriorate, even if outside.</description>
		<fillPercent>0.20</fillPercent>
		<!--<uiIconPath>ASMedieval/AlchemyShelf/Shelf_AssortedHerbs</uiIconPath>-->
		<size>(2,1)</size>
	  	<uiIconScale>1.25</uiIconScale>
		<statBases>
			<MaxHitPoints>80</MaxHitPoints>
			<WorkToBuild>600</WorkToBuild>
			<Beauty>0</Beauty>
      		<Flammability>1</Flammability>
     		<Mass>4</Mass>
		</statBases>
		<building>
			<preventDeteriorationOnTop>true</preventDeteriorationOnTop>
			<maxItemsInCell>6</maxItemsInCell>
			<fixedStorageSettings>
				<filter>
					<disallowNotEverStorable>true</disallowNotEverStorable>
					<categories>
						<!--<li>FoodRaw</li>-->
					</categories>
					<thingDefs>
						<li>MedicineHerbal</li>
						<li>ISA_Mindwort</li>
						<li>ISA_FlyAgaric</li>
						<li>ISA_Poppy</li>
            			<li>ISA_RawHerb</li>
					</thingDefs>
				</filter>
			</fixedStorageSettings>
			<paintable>true</paintable>
		</building>
   		<costStuffCount>20</costStuffCount>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsFurniture</li>
		</thingCategories>
<!--	  <designatorDropdown>ISA_Storage_Shelf</designatorDropdown>	-->
	</ThingDef>

  <!-- Wood Alchemy shelf -->

  <ThingDef ParentName="ASMedievalAlchemyShelfThingBase">
		<defName>ASMedievalAlchemyShelfWoody</defName>
		<stuffCategories>
			<li>Woody</li>
		</stuffCategories>
	</ThingDef>

</Defs>
