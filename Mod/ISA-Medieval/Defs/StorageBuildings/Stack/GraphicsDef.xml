			<li>
				<graphicData>
					<texPath>ASMedieval/Stack/StackCheese/StackCheese</texPath>
					<graphicClass>Graphic_Multi</graphicClass>
		    	<shaderType>CutoutComplex</shaderType>
					<drawSize>(4,4)</drawSize>
				</graphicData>
				<minimumStackCount>1</minimumStackCount>
			</li>
		</graphics>
		<onlyAllowRequiredThingDefs>true</onlyAllowRequiredThingDefs>
		<requiredThingDefs>
			<li>ISA_MealCheese</li>
     		<li>ISA_MealSheepCheese</li>
    		<li>ISA_MealGoatCheese</li>
    		<li MayRequire="Van.Beasts">ISA_MealMufftonCheese</li>
     		<li MayRequire="Van.Beasts">ISA_MealGoldiloxCheese</li>
		</requiredThingDefs>
	</AdaptiveStorage.GraphicsDef>

